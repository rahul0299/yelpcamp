<% layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-secondary"><%= campground.location %></li>
                <li class="list-group-item text-info-emphasis"><%= campground.price %>$ / night</li>
            </ul>
            <div class="card-body">
                <a href="/campgrounds/<%= campground.id %>/edit" class="btn btn-primary">Edit</a>
                <form class="d-inline" action="/campgrounds/<%= campground.id %>?_method=DELETE" method="post">
                    <a href="#" class="btn btn-danger">Delete</a>
                </form>
            </div>
            <div class="card-footer text-body-secondary">
                <a href="/campgrounds">All Camps</a>
            </div>
        </div>
    </div>
</div>

